<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">바이럴 등록 목록</div>
    </div>
    <div class="row-fluid span5">
      <p class="total_user_header"><접속 경로 현황></p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>날짜</th>
            <th>PC</th>
            <th>모바일</th>
            <th>합계</th>
          </tr>
        </thead>
        <tbody>
           <% @viral_action_counts_daily.each do |v| %>
           <tr>
            <td>
             <span><%=v.created_date%></span>  
            </td> 
            <td>
             <span><%=v.pc_count%></span>  
            </td>
            <td>
              <span><%=v.mobile_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>
          <% end %>
          <% @viral_action_counts_sum.each do |v| %>
          <tr>
            <td>
             <span>총합계</span>  
            </td>
            <td>
             <span><%=v.pc_count%></span>  
            </td>
            <td>
              <span><%=v.mobile_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
     <div class="row-fluid span6">
      <p class="total_user_header"><플랫폼 사용 현황></p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>날짜</th>
            <th>페이스북</th>
            <th>트위터</th>
            <th>카카오스토리</th>
            <th>카카오톡</th>
						<th>블로그</th>
            <th>합계</th>
          </tr>
        </thead>
        <tbody>
           <% @viral_platform_counts_daily.each do |v| %>
           <tr>
            <td>
             <span><%=v.created_date%></span>  
            </td>
            <td>
             <span><%=v.facebook_count%></span>  
            </td>
            <td>
              <span><%=v.twitter_count%></span>  
            </td>
            <td>
              <span><%=v.kakaostory_count%></span>  
            </td>
            <td>
              <span><%=v.kakaotalk_count%></span>  
            </td>
            <td>
              <span><%=v.blog_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>
          <% end %>
           <% @viral_platform_counts_sum.each do |v| %>
           <tr>
            <td>
             <span>총합계</span>  
            </td>
            <td>
             <span><%=v.facebook_count%></span>  
            </td>
            <td>
              <span><%=v.twitter_count%></span>  
            </td>
            <td>
              <span><%=v.kakaostory_count%></span>  
            </td>
            <td>
              <span><%=v.kakaotalk_count%></span>  
            </td>
            <td>
              <span><%=v.blog_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
     <div class="row-fluid span11">
      <p class="total_user_header"><바이럴 사용자 현황></p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
        <thead>
          <tr>
            <th>ID</th>
            <th class="device">디바이스</th>
            <th class="name">플랫폼</th>
            <th>참여자</th>
            <th>참여자Email</th>
						<th>참여일시</th>
          </tr>
        </thead>
        <tbody>
          <% @viral_actions.each do |viral_action| %>
            <tr class="">
              <td>
                <%= viral_action.id %>
              </td>
              <td>
                <%= viral_action.device %>
              </td>
              <td>
                <%= viral_action.platform %>
              </td>
              <td>
                <%= viral_action.user.name %>
              </td>
              <td>
                <%= viral_action.user.email %>
              </td>
              <td class="updated_at">
                <p><%= viral_action.created_at.strftime("%m.%d %H:%M") %></p>
              </td>
							
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @viral_actions %>
    </div>
    <div class="row-fluid block-content collapse in">

    </div>
  </div>
  <!-- /block -->
</div>
