<div class="contain">
	<div class="header">
		<%= image_tag("mobile/main/header_logo.png", class: "header_logo") %>
		<%= image_tag("mobile/main/header_label.png", class: "header_label") %>
	</div>
	<div class="title">
		<%= image_tag("mobile/main/title_label.png", class: "title_label") %>
		<%= image_tag("mobile/main/title_label2.png", class: "title_label") %>
		<%= link_to "message" do %>
			<%= image_tag("mobile/main/title_btn.png", class: "title_label_btn") %>
		<% end %>
		<div class="title_share">
			<%= image_tag("mobile/main/title_share_label.png", class: "title_share_element") %>
			<%= link_to "#" do %>
				<%= image_tag("mobile/main/title_share_btn.png", class: "title_share_element title_share_element_right") %>
			<% end %>
		</div>
	</div>
	<div class="content">
		<%= image_tag("mobile/main/content_letter_back.png", class: "content_letter_element") %>
		<%= image_tag("mobile/main/content_letter_front.png", class: "content_letter_element content_letter_front") %>
		<div class="show">
			<%= image_tag("mobile/main/content_label.png", class: "content_label") %>
			<%= link_to "show" do %>
				<%= image_tag("mobile/main/content_btn.png", class: "content_btn") %>
			<% end %>
	</div>
	<div class="comment">
		댓글 영역
	</div>
	<div class="gift">
		<%= image_tag("mobile/main/gift.png", class: "gift_element") %>
	</div>
	<div class="footer">
		<%= image_tag("mobile/main/personal_info.png", class: "personal_info") %>
		<%= link_to "personal_info", class: "personal_info_btnBox"  do %>
			<%= image_tag("mobile/main/personal_info_btn.png", class: "personal_info_btn") %>
		<% end %>
	</div>
</div>